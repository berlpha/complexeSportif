{% extends 'base.html.twig' %}

{% block body %}
    <div class="container"><br><br>
    </div><br><br><br>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4 shadow-sm">
                    <img aria-label="Placeholder: Thumbnail" class="bd-placeholder-img card-img-top" focusable="false"
                         height="625" preserveAspectRatio="xMidYMid slice"
                         role="img" src="{{ asset('uploads/lesson_images/'~lesson.urlPicture) }}" width="100%"
                         xmlns="http://www.w3.org/2000/svg">
                    <rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text>
                    </img>
                    <div class="card-body">
                        <p class="card-text"><strong><em>{{ lesson.name }}</em></strong>{{ lesson.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                        </div>
                    </div>
                    <br><br>
                    <div class="container">
                        <a href="{{ path('app_home') }}"><small>Go back</small></a><br><br>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
