{% extends 'admin.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: absolute; top: -7em">

        <h3 style="text-align: center; color: red; background-color: black">Liste des clubs</h3><br><br>
        <div class="container">
            <table class="table table-striped table-sm">
                <thead style="color: blue">
                    <tr>
                        <th>Name</th>
                        <th>EmailAddress</th>
                        <th>Address</th>
                        <th>Number</th>
                        <th>PostalCode</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for club in clubs %}
                    <tr>
                        <td>{{ club.name }}</td>
                        <td>{{ club.emailAddress }}</td>
                        <td>{{ club.address }}</td>
                        <td>{{ club.postalCode }}</td>
                        <td>{{ club.phone }}</td>
                        <td>{{ club.city }}</td>
                        <td>{{ club.country }}</td>
                        <td>
                            <a href="{{ path('club_show', {'id': club.id}) }}"><button class="btn-block btn-sm" style="background-color: blueviolet">Afficher</button></a>
                            <a href="{{ path('club_edit', {'id': club.id}) }}"><button class="btn-block btn-sm" style="background-color: yellowgreen">Éditer</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10"><em style="color: red">no records found</em></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('club_new') }}"><button class="btn btn-success btn-sm">Créer</button></a><br><br>
        </div><br>
    </div><br><br><br>

{% endblock %}
