{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
    <h1>Member index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FirstName</th>
                <th>Birthdate</th>
                <th>Username</th>
                <th>EmailAddress</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Country</th>
                <th>Avatar</th>
                <th>Roles</th>
                <th>CreatedAt</th>
                <th>ResetToken</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.name }}</td>
                <td>{{ member.firstName }}</td>
                <td>{{ member.birthdate ? member.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ member.username }}</td>
                <td>{{ member.emailAddress }}</td>
                <td>{{ member.password }}</td>
                <td>{{ member.phone }}</td>
                <td>{{ member.address }}</td>
                <td>{{ member.postalCode }}</td>
                <td>{{ member.city }}</td>
                <td>{{ member.country }}</td>
                <td>{{ member.avatar }}</td>
                <td>{{ member.roles ? member.roles|join(', ') : '' }}</td>
                <td>{{ member.createdAt ? member.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ member.resetToken }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}">Afficher</a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('member_new') }}">Create new</a>
{% endblock %}
