{% extends 'base.html.twig' %}

{% block title %}{% trans %}Nursery{% endtrans %}{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top"  style="position: relative; top: 48em">

        {{ include('Errors/errors.html.twig') }}

        <h3 style="text-align: center; color: red; background-color: black">Nursery</h3>

        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th>{% trans %}Name of child{% endtrans %}</th>
                    <td>{{ nursery.nameChild }}</td>
                </tr>
                <tr>
                    <th>{% trans %}First name{% endtrans %}</th>
                    <td>{{ nursery.firstName }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Date of custody{% endtrans %}</th>
                    <td>{{ nursery.dateCustody }}</td>
                </tr>
                <tr>
                    <th>{% trans %}TotalPrice{% endtrans %}</th>
                    <td>{{ nursery.totalPrice }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('nursery_index') }}">{% trans %}back to list{% endtrans %}</a>

        <a href="{{ path('nursery_edit', {'id': nursery.id}) }}">{% trans %}Edit{% endtrans %}</a>

        {{ include('nursery/_delete_form.html.twig') }}

    </div>

{% endblock %}
