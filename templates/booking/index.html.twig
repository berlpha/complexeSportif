{% extends 'admin.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: absolute; top: -7em; margin-top: auto">

        <h3 style="text-align: center; color: red; background-color: black"><strong><em>{% trans %}List of reservations{% endtrans %}</em></strong></h3><br><br>
        <div class="table responsive">
            <table class="table table-striped table-sm">
                <thead style="color: blue">
                    <tr>
                        <th>{% trans %}BeginAt{% endtrans %}</th>
                        <th>{% trans %}EndAt{% endtrans %}</th>
                        <th>{% trans %}Title{% endtrans %}</th>
                        <th>{% trans %}Type{% endtrans %}</th>
                        <th>{% trans %}PriceTotal{% endtrans %}</th>
                        <th>{% trans %}actions{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.title }}</td>
                        <td>{{ booking.type }}</td>
                        <td>{{ booking.priceTotal }}</td>
                        <td>
                            <a href="{{ path('booking_show', {'id': booking.id}) }}"><button class="btn-block btn-sm" style="background-color: blueviolet">{% trans %}Show{% endtrans %}</button></a>
                            <a href="{{ path('booking_edit', {'id': booking.id}) }}"><button class="btn-block btn-sm" style="background-color: yellowgreen">{% trans %}Edit{% endtrans %}</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6"><em style="color: red">{% trans %}no records found{% endtrans %}</em></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div><br>
        <a href="{{ path('booking_new') }}"><button class="btn btn-success btn-sm">{% trans %}Create new{% endtrans %}</button></a><br><br>
    </div><br><br><br>

{% endblock %}
