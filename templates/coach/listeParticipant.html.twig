{% extends 'coach.html.twig' %}

{% block title %}{% trans %}List of participants{% endtrans %}{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: absolute; top: -18em; margin-top: auto">

        {{ include('Errors/errors.html.twig') }}

        <h3 style="text-align: center; color: white; background-color: lightcoral">{% trans %}List of participants in my lessons{% endtrans %}</h3>
        <br><br>
        {% if lesson != null %}

            <div class="responsive">
                <div class="accordion" id="accordionExample">
                    <b style="color: blueviolet"> {% trans %}Lesson name{% endtrans%} : </b> {{ lesson.name | trans }}
                    <div class="card-body">
                        <table class="table table-striped table-sm">
                            <thead style="color: blue">
                                <tr>
                                    <th>{% trans %}Firstname{% endtrans %}</th>
                                    <th>{% trans %}Name{% endtrans %}</th>
                                </tr>
                            </thead>
                            {% for booking in lesson.bookings %}
                                <tbody>
                                    {% for part in booking.member %}
                                        <tr>
                                            <td>{{ part.firstName }}</td>
                                            <td> {{ part.name }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            {% endfor %}
                        </table>
                    </div>
                    <a href="{{ path('app_listeCoachActivities') }}"><button class="btn btn-primary btn-sm" style="background-color: lightcoral"><span class="glyphicon glyphicon-home"></span> {% trans %}Back to list{% endtrans %}</button></a><br><br>

                </div>
            </div><br><br><br>
        {% else %}
            <p><strong><em style="color: blue">{% trans %}Sorry, this lesson has no members yet!{% endtrans %}</em></strong></p>
        {% endif %}
    </div> <br><br><br><br>

{% endblock %}