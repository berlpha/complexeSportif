{% extends 'admin.html.twig' %}

{% block title %}Hall{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top"  style="position: relative; top: 0em; margin-top: auto">

        {{ include('Errors/errors.html.twig') }}

        <h3 style="text-align: center; color: red; background-color: black"><em>{% trans %}Gym{% endtrans %}</em></h3><br><br>

        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th style="color: blue; font-size: 13px">{% trans %}Name{% endtrans %}</th>
                    <td>{{ hall.name }}</td>
                </tr>
                <tr>
                    <th style="color: blue; font-size: 13px">{% trans %}Capacity{% endtrans %}</th>
                    <td>{{ hall.capacity }}</td>
                </tr>
            <tr>
                <th style="color: blue; font-size: 13px">{% trans %}Price Hour{% endtrans %}</th>
                <td>{{ hall.priceHour }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('hall_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet"><span class="glyphicon glyphicon-home"></span> {% trans %}Back to list{% endtrans %}</button></a>

        <a href="{{ path('hall_edit', {'id': hall.id}) }}"><button class="btn btn-primary btn-sm" style="background-color: yellowgreen"><span class="glyphicon glyphicon-pencil"></span> {% trans %}Edit{% endtrans %}</button></a><br><br>

        {{ include('hall/_delete_form.html.twig') }}<br><br>

    </div><br><br>

{% endblock %}
