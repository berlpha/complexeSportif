{% extends 'admin.html.twig' %}

{% block title %}Hall index{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: absolute; top: -12em; margin-top: auto">

        <h3 style="text-align: center; color: red; background-color: black"><em>Liste des salles</em></h3><br><br>

        <div class="table table-striped table-sm">

            <table class="table table-striped table-sm">
                <thead style="color: blue">
                    <tr>
                        <th>Name</th>
                        <th>Capacity</th>
                        <th>Price Hour</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for hall in halls %}
                    <tr>
                        <td>{{ hall.name }}</td>
                        <td>{{ hall.capacity }}</td>
                        <td>{{ hall.priceHour }}</td>
                        <td>
                            <a href="{{ path('hall_show', {'id': hall.id}) }}"><button class="btn-block btn-sm" style="background-color: blueviolet">Afficher</button></a>
                            <a href="{{ path('hall_edit', {'id': hall.id}) }}"><button class="btn-block btn-sm" style="background-color: yellowgreen">Éditer</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4"><em style="color: red">no records found</em></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <a href="{{ path('hall_new') }}"><button class="btn btn-success btn-sm">Créer</button></a><br><br><br><br>

    </div>

{% endblock %}
