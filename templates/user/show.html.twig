{% extends 'admin.html.twig' %}

{% block title %}{% trans %}User{% endtrans %}{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top"  style="position: relative; top: 48em">

        <h3 style="text-align: center; color: red; background-color: black">{% trans %}User{% endtrans %}</h3><br><br>

            <table class="table table-striped table-sm">
                <tbody>
                    <tr>
                        <th style="color: blue">{% trans %}Name{% endtrans %}</th>
                        <td>{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}FirstName{% endtrans %}</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Birthdate{% endtrans %}</th>
                        <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Username{% endtrans %}</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}EmailAddress{% endtrans %}</th>
                        <td>{{ user.emailAddress }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Password{% endtrans %}</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Phone{% endtrans %}</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Address{% endtrans %}</th>
                        <td>{{ user.address }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Number{% endtrans %}</th>
                        <td>{{ user.number }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}PostalCode{% endtrans %}</th>
                        <td>{{ user.postalCode }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}City{% endtrans %}</th>
                        <td>{{ user.city }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Country{% endtrans %}</th>
                        <td>{{ user.country }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Avatar{% endtrans %}</th>
                        <td>{{ user.avatar }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}Roles{% endtrans %}</th>
                        <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">{% trans %}CreatedAt{% endtrans %}</th>
                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

        <a href="{{ path('user_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet">{% trans %}Back to list{% endtrans %}</button></a>

        <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-primary btn-sm" style="background-color: yellowgreen">{% trans %}Edit{% endtrans %}</button></a><br><br>

        {{ include('user/_delete_form.html.twig') }}<br><br><br><br>

    </div>

{% endblock %}
