                    </tr>
                    <tr>
                        <th style="color: blue">EmailAddress</th>
                        <td>{{ user.emailAddress }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">Phone</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">Address</th>
                        <td>{{ user.address }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">Number</th>
                        <td>{{ user.number }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">PostalCode</th>
                        <td>{{ user.postalCode }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">City</th>
                        <td>{{ user.city }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">Country</th>
                        <td>{{ user.country }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">Avatar</th>
                        <td>{{ user.avatar }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">Roles</th>
                        <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    </tr>
                    <tr>
                        <th style="color: blue">CreatedAt</th>
                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

        <a href="{{ path('user_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet">Retour</button></a>

