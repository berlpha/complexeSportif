{% block title %}User{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top"  style="position: relative; top: 48em">

        <h3 style="text-align: center; color: red; background-color: black">Utilisateur</h3><br><br>

            <table class="table table-striped table-sm">
                <tbody>
                    <tr>
                        <th style="color: blue">Name</th>
