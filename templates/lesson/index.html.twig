{% extends 'admin.html.twig' %}

{% block title %}{% trans %}Lesson index{% endtrans %}{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: absolute; top: -25em; margin-top: auto">

        {{ include('Errors/errors.html.twig') }}

            <h3 style="text-align: center; color: red; background-color: black"><em>{% trans %}List of lessons{% endtrans %}</em></h3><br><br>
            <div class="table-responsive"></div>
                <table class="table table-striped table-sm">
                <thead style="color: blue">
                <tr>
                    <th style="font-size: 13px">{% trans %}Name{% endtrans %}</th>
                    <th style="font-size: 13px">{% trans %}Type{% endtrans %}</th>
                    <th style="font-size: 13px">{% trans %}Description{% endtrans %}</th>
                    <th style="font-size: 13px">{% trans %}Price{% endtrans %}</th>
                    <th style="font-size: 13px">{% trans %}UrlPicture{% endtrans %}</th>
                    <th style="font-size: 13px">{% trans %}actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for lesson in lessons %}
                    <tr>
                        <td>{{ lesson.name }}</td>
                        <td>{{ lesson.type ? lesson.type|join(', ') : '' }}</td>
                        <td>{{ lesson.description }}</td>
                        <td>{{ lesson.price }}</td>
                        <td>{{ lesson.urlPicture }}</td>
                        <td>
                            <a href="{{ path('lesson_show', {'id': lesson.id}) }}"><button class="btn-block btn-sm" style="background-color: palegoldenrod"><span class="glyphicon glyphicon-eye-open"></span> {% trans %}Show{% endtrans %}</button></a>
                            <a href="{{ path('lesson_edit', {'id': lesson.id}) }}"><button class="btn-block btn-sm" style="background-color: yellowgreen"><span class="glyphicon glyphicon-pencil"></span> {% trans %}Edit{% endtrans %}</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7"><em style="color: red">{% trans %}no records found{% endtrans %}</em></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('lesson_new') }}"><button class="btn btn-success btn-sm"><span class="glyphicon glyphicon-plus-sign"></span> {% trans %}New lesson{% endtrans %}</button></a><br><br><br><br><br>
            <div class="navigation" style="float: right; font-weight: bold">
                {{ knp_pagination_render(lessons) }}
            </div><br><br><br><br><br><br>

    </div>

{% endblock %}
