{% extends 'admin.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: relative; top: 23em">

        <h3 style="text-align: center; color: red; background-color: black"><em>Lesson</em></h3><br><br>

        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th style="color: blue">Name</th>
                    <td>{{ lesson.name }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Type</th>
                    <td>{{ lesson.type ? lesson.type|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Description</th>
                    <td>{{ lesson.description }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Price</th>
                    <td>{{ lesson.price }}</td>
                </tr>
                <tr>
                    <th style="color: blue">UrlPicture</th>
                    <td>{{ lesson.urlPicture }}</td>
                </tr>
                <tr>
                    <th style="color: blue">UpdatedAt</th>
                    <td>{{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : ''  }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('lesson_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet">Retour</button></a>

        <a href="{{ path('lesson_edit', {'id': lesson.id}) }}"><button class="btn btn-primary btn-sm" style="background-color: yellowgreen">Ã‰diter</button></a><br><br>

        {{ include('lesson/_delete_form.html.twig') }}<br><br><br><br>

    </div><br><br>

{% endblock %}
