{% extends 'admin.html.twig' %}

{% block title %}{% trans %}Lesson{% endtrans %}{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: relative; top: 23em">

        <h3 style="text-align: center; color: red; background-color: black"><em>{% trans %}Lesson{% endtrans %}</em></h3><br><br>

        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th style="color: blue">{% trans %}Name{% endtrans %}</th>
                    <td>{{ lesson.name }}</td>
                </tr>
                <tr>
                    <th style="color: blue">{% trans %}Type{% endtrans %}</th>
                    <td>{{ lesson.type ? lesson.type|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">{% trans %}Description{% endtrans %}</th>
                    <td>{{ lesson.description }}</td>
                </tr>
                <tr>
                    <th style="color: blue">{% trans %}Price{% endtrans %}</th>
                    <td>{{ lesson.price }}</td>
                </tr>
                <tr>
                    <th style="color: blue">{% trans %}UrlPicture{% endtrans %}</th>
                    <td>{{ lesson.urlPicture }}</td>
                </tr>
                <tr>
                    <th style="color: blue">{% trans %}UpdatedAt{% endtrans %}</th>
                    <td>{{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : ''  }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('lesson_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet">{% trans %}Back to list{% endtrans %}</button></a>

        <a href="{{ path('lesson_edit', {'id': lesson.id}) }}"><button class="btn btn-primary btn-sm" style="background-color: yellowgreen">{% trans %}Edit{% endtrans %}</button></a><br><br>

        {{ include('lesson/_delete_form.html.twig') }}<br><br><br><br>

    </div><br><br>

{% endblock %}
