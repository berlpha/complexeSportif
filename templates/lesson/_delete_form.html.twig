<form method="post" action="{{ path('lesson_delete', {'id': lesson.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lesson.id) }}">
    <button class="btn btn-primary btn-sm" style="background-color: red"><span class="glyphicon glyphicon-trash"></span> {% trans %}Delete{% endtrans %}</button>
</form>
