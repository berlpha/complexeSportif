{% extends 'admin.html.twig' %}

{% block title %}Administrator{% endblock %}

{% block body %}
    <div class="container" style="position: relative; top: 70em">

        <h3 style="text-align: center; color: red; background-color: black">Administrateur</h3><br><br>

        <table class="table">
            <tbody>
                <tr>
                    <th style="color: blue">Name</th>
                    <td>{{ administrator.name }}</td>
                </tr>
                <tr>
                    <th style="color: blue">FirstName</th>
                    <td>{{ administrator.firstName }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Birthdate</th>
                    <td>{{ administrator.birthdate ? administrator.birthdate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Username</th>
                    <td>{{ administrator.username }}</td>
                </tr>
                <tr>
                    <th style="color: blue">EmailAddress</th>
                    <td>{{ administrator.emailAddress }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Password</th>
                    <td>{{ administrator.password }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Phone</th>
                    <td>{{ administrator.phone }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Address</th>
                    <td>{{ administrator.address }}</td>
                </tr>
                <tr>
                    <th style="color: blue">PostalCode</th>
                    <td>{{ administrator.postalCode }}</td>
                </tr>
                <tr>
                    <th style="color: blue">City</th>
                    <td>{{ administrator.city }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Country</th>
                    <td>{{ administrator.country }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Avatar</th>
                    <td>{{ administrator.avatar }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Roles</th>
                    <td>{{ administrator.roles ? administrator.roles|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">CreatedAt</th>
                    <td>{{ administrator.createdAt ? administrator.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">ResetToken</th>
                    <td>{{ administrator.resetToken }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('administrator_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet">Retour</button></a>

        <a href="{{ path('administrator_edit', {'id': administrator.id}) }}"><button class="btn btn-primary btn-sm" style="background-color: yellowgreen">Ã‰diter</button></a><br><br>

