{% if is_granted('ROLE_ADMIN') %}
    {%  set page = 'admin.html.twig' %}
{% elseif is_granted('ROLE_COACH') %}
    {% set page =  'coach.html.twig' %}
{% elseif is_granted('ROLE_MEMBER') %}
    {% set page = 'member.html.twig' %}
{% elseif is_granted('ROLE_USER') %}
    {% set page = 'member.html.twig' %}
{% endif %}

{% extends page %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: relative; top: 55em"><br>
        <div class="container">
            {% for message in app.flashes('message') %}
                <div class="col-xs4">
                    <div class="p-3 my-2 rounded-2 success text-center"><em style="background-color: green; color: black">{{ message }}</em></div>
                </div>
            {% endfor %}
            <h3 style="text-align: center; color: blue"><strong><em>{% trans %} The profile of {% endtrans %} {{ app.user.firstname }} {{ app.user.name }}.</em></strong></h3>
            <br>
            <div class="row col">
                <div class="col">
                    <div class="card">
                        <div class="card-header bg-primary text-white" style="text-align: center"><i class="fa fa-envelope"></i><strong style="color: white"><em>{% trans %}Modification{% endtrans %}</em></strong><br>
                        </div>
                        <div class="card-body">
                            {{ form(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br><br>
    </div>

{% endblock %}
