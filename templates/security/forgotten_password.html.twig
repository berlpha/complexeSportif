{% extends 'base.html.twig' %}

{% block body %}

    <div class="container" style="margin-left: 25%">
        <div class="container">
            <div class="row col" style="text-align: center">

                {{ include('Errors/errors.html.twig') }}

                <div class="col-md-6">
                    <h3 style="color: blue"><strong><em>{% trans %}Please enter your e-mail address and click send{% endtrans %}</em></strong></h3><br><br>
                    <div class="card">
                        <div class="card-header bg-primary text-white" style="text-align: center"><i class="fa fa-envelope">{% trans %}I forgot my password{% endtrans %}</i></div>
                        <br><br>
                        <div class="body">
                            <form method="post" action="">
                                <div class="row">
                                    <!--Grid column-->
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="inputEmail" class="sr-only">{% trans %}Your email{% endtrans %}</label>
                                            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Entrer votre adresse email!" required autofocus><br>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary" type="submit"><em>{% trans %}Send!{% endtrans %}</em></button>
                                <br><br>
                                <p class="mt-5 mb-3 text-muted text-center"><small>&copy 2019-{{ 'now' | date('Y') }}</small></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><br><br><br><br><br><br><br><br><br>

{% endblock %}