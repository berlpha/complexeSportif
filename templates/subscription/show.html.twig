{% extends 'admin.html.twig' %}

{% block title %}Subscription{% endblock %}

{% block body %}

    <div class="container" style="position: relative; top: 20em; margin-top: auto">

        <h3 style="text-align: center; color: red; background-color: black">L'inscrit</h3><br><br>

        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th style="color: blue">Type</th>
                    <td>{{ subscription.type ? subscription.type|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Description</th>
                    <td>{{ subscription.description }}</td>
                </tr>
                <tr>
                    <th style="color: blue">Price</th>
                    <td>{{ subscription.price }}</td>
                </tr>
                <tr>
                    <th style="color: blue">CreatedAt</th>
                    <td>{{ subscription.createdAt ? subscription.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">UpdatedAt</th>
                    <td>{{ subscription.updatedAt ? subscription.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue">FinishedAt</th>
                    <td>{{ subscription.finishedAt ? subscription.finishedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('subscription_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet">Retour</button></a>

        <a href="{{ path('subscription_edit', {'id': subscription.id}) }}"><button class="btn btn-primary btn-sm" style="background-color: yellowgreen">Ã‰diter</button></a><br><br>

        {{ include('subscription/_delete_form.html.twig') }}<br><br>

    </div><br><br><br><br>

{% endblock %}
