{% extends 'admin.html.twig' %}

{% block title %}{% trans %}Subscription{% endtrans %}{% endblock %}

{% block body %}

    <div class="container" style="position: relative; top: 8em; margin-top: auto">

        {{ include('Errors/errors.html.twig') }}

        <h3 style="text-align: center; color: red; background-color: black">{% trans %}Subscriber{% endtrans %}</h3><br><br>

        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th style="color: blue; font-size: 13px">{% trans %}Type{% endtrans %}</th>
                    <td>{{ subscription.type ? subscription.type|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue; font-size: 13px">{% trans %}Description{% endtrans %}</th>
                    <td>{{ subscription.description }}</td>
                </tr>
                <tr>
                    <th style="color: blue; font-size: 13px">{% trans %}Price{% endtrans %}</th>
                    <td>{{ subscription.price }}</td>
                </tr>
                <tr>
                    <th style="color: blue; font-size: 13px">{% trans %}CreatedAt{% endtrans %}</th>
                    <td>{{ subscription.createdAt ? subscription.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: blue; font-size: 13px">{% trans %}FinishedAt{% endtrans %}</th>
                    <td>{{ subscription.finishedAt ? subscription.finishedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('subscription_index') }}"><button class="btn btn-primary btn-sm" style="background-color: blueviolet"><span class="glyphicon glyphicon-home"></span> {% trans %}Back to list{% endtrans %}</button></a>

        <a href="{{ path('subscription_edit', {'id': subscription.id}) }}"><button class="btn btn-primary btn-sm" style="background-color: yellowgreen"><span class="glyphicon glyphicon-pencil"></span> {% trans %}Edit{% endtrans %}</button></a><br><br>

        {{ include('subscription/_delete_form.html.twig') }}<br><br>

    </div><br><br><br><br>

{% endblock %}
