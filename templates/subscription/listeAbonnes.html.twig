{% extends 'coach.html.twig' %}

{% block title %}{% trans %}List of participants{% endtrans %}{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: absolute; top: -10em; margin-top: auto">

        {{ include('Errors/errors.html.twig') }}

        <h3 style="text-align: center; color: red; background-color: black">{% trans %}List of registrants in this lesson{% endtrans %}</h3>
        <br><br>
        {% if user != null %}

            <div class="responsive">
                <div class="accordion" id="accordionExample">
                    <div class="card-body">
                        <table class="table table-striped table-sm">
                            <thead style="color: blue">
                            <tr>
                                <th>{% trans %}Firstname{% endtrans %}</th>
                                <th>{% trans %}Name{% endtrans %}</th>
                            </tr>
                            </thead>
                            {% for booking in lesson.bookings %}
                                <tbody>
                                    {% for part in booking.member %}
                                        <tr>
                                            <td>{{ part.firstName }}</td>
                                            <td> {{ part.name }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <p><strong><em style="color: blue">{% trans %}Sorry, this lesson has no members yet!{% endtrans %}</em></strong></p>
        {% endif %}
    </div>
{% endblock %}