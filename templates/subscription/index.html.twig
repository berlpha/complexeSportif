{% extends 'admin.html.twig' %}

{% block title %}Subscription index{% endblock %}

{% block body %}

    <div class="container navbar-fixed-top" style="position: absolute; top: 0em; margin-top: auto">

        {% for message in app.flashes('message') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <h3 style="text-align: center; color: red; background-color: black"><em>{% trans %}List of subscribers{% endtrans %}</em></h3><br><br>
        <div class="responsive">
            <table class="table table-striped table-sm">
                <thead style="color: blue">
                    <tr>
                        <th>{% trans %}Username{% endtrans %}</th>
                        <th>{% trans %}Type{% endtrans %}</th>
                        <th>{% trans %}Description{% endtrans %}</th>
                        <th>{% trans %}Price{% endtrans %}</th>
                        <th>{% trans %}CreatedAt{% endtrans %}</th>
                        <th>{% trans %}FinishedAt{% endtrans %}</th>
                        <th>{% trans %}actions{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                {% for subscription in subscriptions %}
                    <tr>
                        <td>{{ subscription.member }}</td>
                        <td>{{ subscription.type ? subscription.type|join(', ') : '' }}</td>
                        <td>{{ subscription.description }}</td>
                        <td>{{ subscription.price }}</td>
                        <td>{{ subscription.createdAt ? subscription.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ subscription.finishedAt ? subscription.finishedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('subscription_show', {'id': subscription.id}) }}"><button class="btn-block btn-sm" style="background-color: blueviolet">{% trans %}Show{% endtrans %}</button></a>
                            <a href="{{ path('subscription_edit', {'id': subscription.id}) }}"><button class="btn-block btn-sm" style="background-color: yellowgreen">{% trans %}Edit{% endtrans %}</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" style="color: red">{% trans %}no records found{% endtrans %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div><br>

        <a href="{{ path('app_adminSubscription') }}"><button class="btn btn-success btn-sm">{% trans %}Create{% endtrans %}</button></a><br><br>

    </div><br><br><br>
{% endblock %}
